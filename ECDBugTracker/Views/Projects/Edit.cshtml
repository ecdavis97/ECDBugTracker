@model ECDBugTracker.Models.Project

@using ECDBugTracker.Models.Enums
@using ECDBugTracker.Services.Interfaces

@inject IImageService _imageService

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Project</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="hidden" asp-for="CompanyId" />
                <input type="hidden" asp-for="Created" class="form-control" />
                <input type="hidden" asp-for="StartDate" class="form-control" />
                <input type="hidden" asp-for="EndDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProjectPriorityId" class="control-label"></label>
                <select asp-for="ProjectPriorityId" class="form-control" asp-items="ViewBag.ProjectPriorityId"></select>
            </div>
            <div class="col-lg-6 col-md-6 col-12">
                <div class="form-group">
                    <label asp-for="ImageFormFile" class="control-label"></label>
                    <input type="file" asp-for="ImageFormFile" class="form-control w-100" accept=".png,.jpg,.jpeg,.gif,.svg"
                           onchange="document.getElementById('imageData').src = window.URL.createObjectURL(this.files[0])" />
                    <span asp-validation-for="ImageFormFile" class="text-danger"></span>
                </div>
                <div class="col col-lg-6 col-md-6">
                    <img id="imageData" class="img-fluid img-thumbnail" style="width:100px;height:80px" src="@_imageService.ConvertByteArrayToFile(Model.ImageFileData!,Model.ImageContentType!,(int)DefaultImage.Project)">
                </div>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Archived" /> @Html.DisplayNameFor(model => model.Archived)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
